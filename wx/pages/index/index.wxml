<view class="page">
  <view class="cells">
    <view class="cell" bind:tap="toConnection">
      <view class="cell-title">
        当前设备
      </view>
      <view class="cell-extra">
        {{deviceName || '未连接'}}
      </view>
    </view>
  </view>

  <block wx:if="{{!deviceName}}">
    <button type="primary" bind:tap="toConnection">搜索蓝牙设备</button>
  </block>
  <block wx:else>
    <button type="primary" bind:tap="onPrint">打印</button>
  </block>
</view>

